{
  "version": 2,
  "builds": [
    {
      "src": "app.py",
      "use": "@vercel/python",
      "config": {
        "includeFiles": [
          "app.py",
          "config.py",
          "services/**",
          "utils/**",
          "templates/**"
        ],
        "exclude": [
          "**/test/**",
          "**/tests/**",
          "**/__pycache__/**",
          "**/*.pyc"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "app.py"
    }
  ]
}